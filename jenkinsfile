pipeline {
    agent any
    stages {
        stage ('Build') {
            steps {
                echo "Building the application"
            }
        }
        stage ('DeployToProd') {
            when {
               expression { BRANCH_NAME ==~ /(production|staging)/}
            }
            steps {
                echo "*****Deploying to production*******"
            }
        }
    }
}
